@page "/"
@attribute [Authorize(Roles = "admin,owner,manager,dispatcher")]
<PageTitle>Logisitics</PageTitle>

<h1>Site Administration</h1>
<table class="table table-hover">
    <thead>
        <tr class="row bg-light">
            <th class="col-6 col-sm-7 col-md-8 col-lg-9">Catalog</th>
            <th class="col-6 col-sm-5 col-md-4 col-lg-3">Action</th>
        </tr>
    </thead>
    <tbody>
        <tr class="row">
            <td class="col-6 col-sm-7 col-md-8 col-lg-9">
                <span class="fw-bold">Users</span>
            </td>
            <td class="col-6 col-sm-5 col-md-4 col-lg-3">
                <NavLink class="btn btn-primary disabled" href="#">
                    <i class="bi bi-pencil"></i> Add
                </NavLink>
                <NavLink class="btn btn-primary" href="/list-user">
                    <i class="bi bi-list"></i> List
                </NavLink>
            </td>
        </tr>
        <tr class="row">
            <td class="col-6 col-sm-7 col-md-8 col-lg-9">
                <span class="fw-bold">Trucks</span>
            </td>
            <td class="col-6 col-sm-5 col-md-4 col-lg-3">
                <NavLink class="btn btn-primary" href="/edit-truck">
                    <i class="bi bi-pencil"></i> Add
                </NavLink>
                <NavLink class="btn btn-primary" href="/list-truck">
                    <i class="bi bi-list"></i> List
                </NavLink>
            </td> 
        </tr>
        <tr class="row">
            <td class="col-6 col-sm-7 col-md-8 col-lg-9">
                <span class="fw-bold">Cargoes</span>
            </td>
            <td class="col-6 col-sm-5 col-md-4 col-lg-3">
                <NavLink class="btn btn-primary" href="/edit-cargo">
                    <i class="bi bi-pencil"></i> Add
                </NavLink>
                <NavLink class="btn btn-primary" href="/list-cargo">
                    <i class="bi bi-list"></i> List
                </NavLink>
            </td>
        </tr>
    </tbody>
</table>
