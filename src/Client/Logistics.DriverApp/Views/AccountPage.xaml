<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Logistics.DriverApp.Views.AccountPage"
             Title="Account">
    <VerticalStackLayout Padding="10">
        <HorizontalStackLayout>
            <Label Text="User name: " />
            <Editor Text="{Binding AccountForm.UserName}" IsReadOnly="True" />
        </HorizontalStackLayout>
        <HorizontalStackLayout Margin="0,10">
            <Label Text="First name: " />
            <Editor Text="{Binding AccountForm.FirstName}" />
        </HorizontalStackLayout>
        <HorizontalStackLayout Margin="0,10">
            <Label Text="Last name: " />
            <Editor Text="{Binding AccountForm.LastName}" />
        </HorizontalStackLayout>
        <HorizontalStackLayout Margin="0,10">
            <Label Text="Email: " />
            <Editor Text="{Binding AccountForm.Email}" IsReadOnly="True" />
        </HorizontalStackLayout>
        <HorizontalStackLayout Margin="0,10">
            <Label Text="Phone number: " />
            <Editor Text="{Binding AccountForm.PhoneNumber}" />
        </HorizontalStackLayout>
        <Button Margin="0,10" Text="Update" Command="{Binding UpdateCommand}" />
    </VerticalStackLayout>
</ContentPage>