{
  "Serilog": {
    "Using": [
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.AspNetCore.Authentication": "Information",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "Logs/identityapp-.log",
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact",
          "rollingInterval": "Month"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithThreadId",
      "WithExceptionDetails"
    ]
  },
  "ConnectionStrings": {
    "MainDatabase": "Server=.\\SQLEXPRESS; Database=main_logistics; Uid=LogisticsUser; Pwd=Test12345"
  },
  "GoogleRecaptcha": {
    "SiteKey": "Google captcha site key",
    "SecretKey": "Google captcha secret key"
  },
  "EmailConfig": {
    "SenderMail": "account email",
    "SenderName": "Logistics NoReply",
    "UserName": "email account username",
    "Password": "Paste email account password",
    "Host": "Email host address",
    "Port": 587
  },
